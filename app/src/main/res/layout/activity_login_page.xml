<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginPage"
    android:orientation="vertical"
    android:background="@drawable/w1"
    android:gravity="center"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginRight="30dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_whatsapp" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUsername"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="9dp"
        android:textColor="@color/lightGrey"
        android:textColorHint="@color/grayBackground"
        android:paddingBottom="10dp"/>

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="9dp"
        android:textColor="@color/lightGrey"
        android:textColorHint="@color/grayBackground"
        android:paddingBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassword"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="9dp"
        android:textColor="@color/lightgreen"
        android:textColorHint="@color/grayBackground">

    </EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAllreadyHaveAccount"
        android:layout_gravity="right"
        android:text="Allready Have Account"
        android:textColor="@color/white"
        android:padding="5dp"
        android:textStyle="bold">


    </TextView>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/pubSingUp"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        app:backgroundTint="@color/design_default_color_secondary_variant"
        app:cornerRadius = "8dp">

    </Button>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:layout_marginTop="25dp"
    android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pubGoogle"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_google"
        android:padding="15dp"
        android:text="Google"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:cornerRadius = "8dp"></Button>



       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/pubFacebook"
           android:layout_marginStart="4dp"
           android:layout_marginLeft="4dp"
           android:layout_weight="1"
           android:drawableLeft="@drawable/ic_facebook"
           android:padding="15dp"
           android:text="Facebook"
           android:textAllCaps="false"
           android:textColor="@color/black"
           android:backgroundTint="@color/fb_color"
           app:cornerRadius = "8dp">


    </Button>


</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSingUpPhone"
        android:layout_marginTop="15dp"
        android:text="Sing Up With Phone"
        android:textColor="@color/white"
        android:textSize="19sp"></TextView>


</LinearLayout>


</LinearLayout>